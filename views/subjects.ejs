<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head %>
  </head>
  <body>
    <header>
      <%- include ./partials/menubar %>
    </header>

    <h1>SUBJECTS DATA</h1>
    <!-- <h4><%= JSON.stringify(data_subjects) %></h4> -->
    <table class="table table-striped">
      <tr>
        <th>ID</th>
        <th>Subject Name</th>
        <th>Teachers</th>
        <th>Actions</th>
      </tr>

      <% data_subjects.forEach(subject => { %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.subject_name %></td>
          <td>
            <ol>
          <% subject.Teachers.forEach(teacher => { %>
              <li>
            <%= teacher.first_name + ' ' + teacher.last_name %><br>
          </li>
            <% }) %>
          </ol>
          </td>
          <td><a href="/subjects/<%= subject.id %>/enrolledstudents/">Enrolled Students</a></td>
        </tr>
      <% }); %>

    </table>
    <br>
    <a href="/">Home</a>
  </body>
</html>
