<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers Data</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <a href="/teachers/add">Add Teacher</a>
    <table>
      <tr>
        <th>ID</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Actions</th>
      </tr>
      <% data_teachers.forEach(teacher => { %>
        <tr>
          <td><%= teacher.id %></td>
          <td><%= teacher.first_name %></td>
          <td><%= teacher.last_name %></td>
          <td><%= teacher.email %></td>
            <% if (teacher.SubjectId == undefined) { %>
              <td>Unassigned</td>
            <% } else { %>
              <td><%= teacher.Subject.subject_name %></td>
            <% } %>
          <td><a href="/teachers/edit/<%= teacher.id %>">Edit</a> <a href="/teachers/delete/<%= teacher.id %>" onclick="return confirm('Are you sure want to delete this data?')">Delete</a></td>
        </tr>
      <% }); %>
    </table>
    <br>
    <a href="/">Home</a>
  </body>
</html>
