<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Subject to Student</title>
  </head>
  <body>
    <!-- <h4><%= JSON.stringify(data_students) %></h4>
    <h4><%= JSON.stringify(data_subjects) %></h4> -->
    <table>
      <tr>
        <th>First name</th>
        <td><%= data_students.first_name %></td>
      </tr>
      <tr>
        <th>Last name</th>
        <td><%= data_students.last_name %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= data_students.email %></td>
      </tr>
      <tr>
        <th>Jurusan</th>
        <td><%= data_students.jurusan %></td>
      </tr>
    </table>
    <form action="/students/addsubject/<%= data_students.id %>" method="post">
      <select name="SubjectId">
        <option value="">Choose subject to assign</option>
        <% data_subjects.forEach(subject => { %>
          <option value="<%= subject.id %>"><%= subject.subject_name %></option>
        <% }) %>
      </select>
      <br>
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
