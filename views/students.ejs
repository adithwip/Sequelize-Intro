<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head %>
  </head>
  <body>
    <header>
      <%- include ./partials/menubar %>
    </header>

    <h1>STUDENTS DATA</h1>
    <br>
    <table class="table table-condensed">
      <tr>
        <th>No</th>
        <th>Firstname</th>
        <th>Lastname</th>
        <th>Unique ID</th>
        <th>Email</th>
        <th>Jurusan</th>
        <th>Add</th>
        <th>Actions</th>
      </tr>
      <% var id = 1 %>
      <% data_students.forEach(student => { %>
        <tr>
          <td><%= id++ %></td>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.id %></td>
          <td><%= student.email %></td>
          <td><%= student.jurusan %></td>
          <td><a href="/students/addsubject/<%= student.id %>">Add Subject</a></td>
          <td><a href="/students/edit/<%= student.id %>">Edit</a> <a href="/students/delete/<%= student.id %>" onclick="return confirm('Are you sure want to delete this data?')">Delete</a></td>
        </tr>
      <% }); %>
    </table>
    <br>
  </body>
</html>
